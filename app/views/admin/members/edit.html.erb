<div class="container-fluid">
<div class="row">
<div class="col-md-8 offset-md-1"> 

<h2>会員情報編集</h2>



<%= form_with model: @member, url: admin_member_path(@member.id) do |f| %>
  
<table>
<div class="field text-left">
  <tr>
    <th>会員ID</th>
    <td><%= @member.id %></td>
  </tr>
  
  <tr>
    <th>ユーザー名</th>
    <td><%= f.text_field :name %></td>
  </tr>
      
  <tr>
    <th>メールアドレス</th>
    <td><%= f.text_field :email %></td>
  </tr>
  
    <tr>
    <th>会員ステータス</th>
    <td><%= f.radio_button :is_deleted, false %> 有効会員 <%= f.radio_button :is_deleted, true %> 退会済み</td>
  </tr>
  
</div> 
</table>
<%= f.submit "変更を保存する", class:"btn btn-primary" %>
<%= link_to :back do %>
  <button>戻る</button>
<% end %>
  
  <% end %>
  </div>
  </div>
  </div>