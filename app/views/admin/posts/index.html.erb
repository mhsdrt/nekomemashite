<div class="container">
  <div class="row">

<% @posts.each do |post| %>
    <span class="border border-primary"><div class="col-12">
    <p>投稿者:<%= post.member.name %></p>
    <p>ネコ:<%= post.cat.name %></p>
    <%= link_to admin_post_path(post.id) do %>
    <%= image_tag post.get_post_image(200,200) %>
    <% end %>
    <p><%= post.content.truncate(15, omission: '...') %></p>
       <p><%= link_to "#{post.comments.count} コメント", admin_post_path(post.id) %></p>
</div>
</span>
<% end %>

</div>
</div>