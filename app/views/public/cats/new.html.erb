<div class="container">
  <label>ネコ登録フォーム</label>
  <div class="row card w-50 mt-4">
    
    <% if @cat.errors.any? %>
      <h6><%= @cat.errors.count %>件のエラーが発生しました</h6>
      <ul>
        <% @cat.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @cat,url: cats_path do |f| %>
      <form>
        <label>ネコの画像</label>
        <p><%= f.file_field :cat_image, accept: "image/*" %></p>
        <div class="form-row">
          <div class="col-3 mb-2">
            <label>お名前</label>
            <%= f.text_field :name, class:"form-control" %>
          </div>
          <div class="col-2 mb-2">
            <label>性別</label>
            <%= f.text_field :sex, class:"form-control" %>
          </div>
          <div class="col-2">
            <label>年齢</label>
            <%= f.text_field :age, class:"form-control" %>
          </div>
        </div>
        <div class="form-row">
          <div class="col-3 mb-2">
            <label>ネコの種類</label>
            <%= f.text_field :cattype, class:"form-control" %>
          </div>
          <div class="col-3 mb-2">
            <label>性格</label>
            <%= f.text_field :character, class:"form-control"  %>
          </div>
        </div>
        <div class="form-row">
          <div class="col-7 mb-2">
            <label>プロフィール</label>
            <%= f.text_area :profile, class:"form-control" %>
          </div>
        </div>
        <%= f.submit '登録', class:"btn  btn-outline-success"%>
      </form>
    <% end %>
  </div>
</div>