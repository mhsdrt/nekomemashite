<div class="container">
  <div class="wd-text">
    <h4>ネコ登録フォーム</h4>
    <% if @cat.errors.any? %>
      <h6><%= @cat.errors.count %>件のエラーが発生しました</h6>
      <ul>
        <% @cat.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @cat,url: cats_path do |f| %>
      <h4>ネコの画像</h4>
      <%= f.file_field :cat_image, accept: "image/*" %>
      <h4>お名前</h4>
      <div class="form-group col-md-2">
      <%= f.text_field :name, class:"form-control" %>
      </div>
      <h4>性別</h4>
      <div class="form-group col-md-2">
      <%= f.text_field :sex, class:"form-control" %>
      </div>
      <h4>年齢</h4>
      <div class="form-group col-md-2">
      <%= f.text_field :age, class:"form-control" %>
      </div>
      <h4>ネコの種類</h4>
      <div class="form-group col-md-2">
      <%= f.text_field :cattype, class:"form-control" %>
      </div>
      <h4>性格</h4>
      <div class="form-group col-md-2">
      <%= f.text_field :character, class:"form-control"  %>
      </div>
      <h4>プロフィール</h4>
      <div class="form-group col-md-6">
      <%= f.text_area :profile, class:"form-control" %>
      </div>
      <%= f.submit '登録', class:"btn  btn-outline-success"  %>
    <% end %>
  </div>
</div>