<div class="container text-center takasa">
  <div class="wd-text">
  <div>
    <p>投稿者:<%= @post.member.name %></p>
    <p>ネコ:<%= @post.cat.name %></p>
    <%= image_tag @post.get_post_image(400,400) %>
    <p><%= @post.content %></p>
    <p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>

  
    <!--いいねの実装 -->
<div id = "like_<%= @post.id %>">
  <%= render partial: "public/likes/like", locals: { post: @post } %>
</div>

  </div>
  
  <!-- コメントの実装 -->
  <div>
  <p>コメント件数：<%= @post.comments.count %></p>
  <% @post.comments.each do |comment| %>
    <%= comment.member.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
    
      <% if comment.member == current_member %>
        <%= link_to "削除", public_post_comment_path(comment.post, comment), method: :delete, class:"btn btn-sm btn-danger",data: { confirm: '本当に消しますか？' }  %><br>
      <% end %>
    <% end %>
  
</div>
  <% if @error_comment.present? %>
    <div id="error_explanation">
      <h2><%= @error_comment.errors.count %>件のエラーが発生しました。</h2>
      <ul>
        <% @error_comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
<div>
  <%= form_with url: public_post_comments_path(@post) do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>

    <% if @post.member == current_member %>
<td><%= link_to"Destroy",public_post_path(@post), method: :delete, class:"btn btn-sm btn-danger",data: { confirm: '本当に消しますか？' } %></td>
  <% end %>

</div>
</div>