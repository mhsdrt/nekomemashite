<tr>
 <% @posts.each do |post| %>

<td><%= link_to post_path(post.id) do %><%= post.content %></td>
<%= attachment_image_tag post, :post_image,format: 'jpeg',size: "40x40", fallback: "no_image.jpg" %>
<td><%= post.content %></td>
<td><%= link_to post.tag, search_post_path(keyword: post.tag) %></td>
<% end %>