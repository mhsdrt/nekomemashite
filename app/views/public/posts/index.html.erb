
ネコ活一覧
<div class="container-fluid">
  <div class="row">
    <% @posts.each do |post| %>
      <span class="border">
        <div class="col-md-12">
          <span style="font-size:10px; color:gray;">投稿者:<%= post.member.name %></span>
          <%= link_to cat_path(post.cat_id) do %>
            <span style="font-size:10px;">ネコ:<%= post.cat.name %></span>
          <% end %><br>
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_post_image(200,200) %>
          <% end %>
          <span style="font-size:10px;"><%= post.content.truncate(24, separator: ' ') %></span>
          <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
        </div>
      </span>
    <% end %>
  </div>
</div>