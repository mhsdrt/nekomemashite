<div class="container text-center takasa">
  <div class="wd-text">
ネコ活一覧

<% @posts.each do |post| %>
  <div>
    <p>投稿者:<%= post.member.name %></p>
    <p>ネコ:<%= post.cat.name %></p>
    <%= link_to public_post_path(post.id) do %>
    <%= image_tag post.get_post_image(200,200) %>
    <% end %>
    <p><%= post.content.truncate(24, separator: ' ') %></p>
       <p><%= link_to "#{post.comments.count} コメント", public_post_path(post.id) %></p>

  </div>

<% end %>


</div>
</div>