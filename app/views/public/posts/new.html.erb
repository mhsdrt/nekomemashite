<div class="container">
  
    <label class="h4">ネコ活投稿フォーム</label>
    <div class="row card w-40 mt-4">
    <% if @post.errors.any? %>
      <h6><%= @post.errors.count %>件のエラーが発生しました</h6>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @post,url: posts_path do |f| %>
    <form>
      <div class="form-row">
        <div class="col-3 mb-2">
          <%= f.collection_select :cat_id, current_member.cats.all, :id, :name, include_blank: "ネコを選択して下さい" %>
        </div>
        <div class="col-3 mb-2">
          <label><%= f.file_field :post_image, accept: "image/*" %></label>
        </div>
      </div>
      <div class="form-row">
        <div class="col-6 mb-2">
          <label>投稿内容</label>
          <%= f.text_area :content, class:"form-control" %>
        </div>
      </div>
      <div class="form-row">
        <div class="col-2 mb-2">
          <label>タグ</label>
          <%= f.text_field :tag, class:"form-control"  %>
        </div>
      </div>
      <%= f.submit '登録',class:"btn  btn-outline-success" %>
    </form>
    <% end %>
  </div>
</div>