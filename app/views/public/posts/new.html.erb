<div class="container">
  <div class="wd-text">
    <h4>ネコ活投稿フォーム</h4>
    <% if @post.errors.any? %>
      <h6><%= @post.errors.count %>件のエラーが発生しました</h6>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @post,url: posts_path do |f| %>
      <%= f.collection_select :cat_id, current_member.cats.all, :id, :name, include_blank: "ネコを選択して下さい" %>
      <h4>画像</h4>
      <%= f.file_field :post_image, accept: "image/*" %>
      <h4>投稿内容</h4>
      <div class="form-group col-md-4">
        <%= f.text_area :content, class:"form-control" %>
      </div>
      <h4>タグ</h4>
      <div class="form-group col-md-2">
        <%= f.text_field :tag, class:"form-control"  %><br>
      </div>
      <%= f.submit '登録',class:"btn  btn-outline-success" %>
    <% end %>
  </div>
</div>