<div class="container">
  <div class="wd-text">

<h1>ネコ活投稿フォーム</h1>
<% if @post.errors.any? %>
  <h6><%= @post.errors.count %>件のエラーが発生しました</h6>
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @post,url: posts_path do |f| %>
    <%= f.collection_select :cat_id, current_member.cats.all, :id, :name, include_blank: "ネコを選択して下さい" %>
    <h4>画像</h4>
      <%= f.file_field :post_image, accept: "image/*" %>
    <h4>投稿内容</h4>
      <%= f.text_area :content %>
    <h4>タグ</h4>
      <%= f.text_field :tag %><br>
    <%= f.submit '登録',class:"btn  btn-outline-success" %>
  <% end %>
  </div>
  </div>