
    <%= form_tag(search_path, method: :get) do %>
      <%= text_field_tag 'content', "", placeholder: "入力して検索" %>
      <%= select_tag 'type', options_for_select({ "キーワード検索" => "keyword", "タグ検索" => "tag" }) %>
      <%= select_tag 'method', options_for_select({ "完全一致" => "perfect", "部分一致" => "partial" }) %>
      <%= submit_tag '検索',class:"btn btn-outline-primary" %>
    <% end %>
