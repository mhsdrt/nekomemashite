<div class="container px-5 px-sm-0">
  <div class="row">  
    <div class="col-12 text-center">
      <legend>マイページ</legend>
    </div>
  </div>
  <div class="row">
    <div class="col-4"></div>
    <div class=" card col-4 mb-4 text-center">
      <%= link_to "いいねした投稿一覧はこちら",  likes_member_path(@member) %>
    </div>
    <div class="col-4"></div>
  </div>
  <div class="row">
        <label class="font-size:20px; ">登録ネコ</label>
    <% @cats.each do |cat| %>
    <div class="col-2 mb-2 card w-50 shadow-lg text-center">
        <%= cat.name %>(<%= cat.sex %>)
        <%= link_to cat_path(cat.id) do %>
          <%= image_tag cat.get_cat_image(100,100) %>
        <% end %>
        </div>
    <% end %>
  </div>


  <span style="font-size:20px; ">投稿履歴</span>
  <% @posts.each do |post| %>
    <div class="col-3card w-50 mx-right mt-4 shadow-lg">
      <%= link_to post_path(post.id) do %>
        <%= image_tag post.get_post_image(200,200) %>
      <% end %>
      <%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
      ネコ:<%= post.cat.name %>
      <%= post.content %>
      <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %>
      <%= link_to "#{post.likes.count} いいね", post_path(post.id) %></p>
    </div>
  <% end %>

  <div class="col-xs-3">
    <%= link_to "退会する", members_quit_path ,class: "btn btn-danger " %>
  </div>
</div>